#include <cstdio>
#include <cstdlib>
#include <string.h>
#include <string>
#include "mctsnng.h"

int main(int _ac, char** _av) {
  //if(_ac != 2) { printf("usage: %s NONOGRAM_INPUT_FILE\n", _av[0]); return 0; }
  srand(1);
  
  //root_board.load(_av[1]);
  root_board.load((char*)"nonogram-001.input");
  int nb_iterations = 1;
  int max_depth = 10;
  nng_tree_t T(nb_iterations, max_depth);
  //T.print(0);
  for(int i = 0; i < nb_iterations; i++) {
    mcts_board = root_board;
    T.selection();
    T.expansion();
    int score = T.simulation();
    T.backpropagate(score);
  }
  T.finalize();
  return 0;
}
